<%
   @title = @release ? "GitLab Contributors - #{@release.name}" : @edge ? 'GitLab Contributors - Edge' : add_window_to("GitLab Contributors", @time_window)
   @description = 'GitLab contributors'
%>

<h1 id="title">
  <%= @title %><br/>
  <span class="listing-total">Showing <%= pluralize @contributors.length, 'person' %></span>
</h1>
<%= link_to "See names mapping â†’", 'https://github.com/gitlabhq/gitlab-contributors/blob/master/app/models/names_manager.rb', class: 'name-mapping' %>

<div id="table-wrap">
  <table>
    <tr class="header">
      <th></th>
      <th>Name</th>
      <th>Commits</th>
    </tr>
    <%= render @contributors %>
  </table>
</div>

<%= render 'shared/window_sidebar' %>
